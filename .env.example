# Environment Variables for Backend
# Copy this to .env for local development
# For Vercel: Set these in Vercel Dashboard > Settings > Environment Variables

# MongoDB Connection
MONGODB_URL=your_mongodb_connection_string_here
# Example: mongodb+srv://username:password@cluster.mongodb.net/caption-io?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Google Gemini AI API Key (for caption generation)
GEMINI_API_KEY=your_gemini_api_key_here

# ImageKit Configuration (for image uploads)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
